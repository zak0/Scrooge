    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    tools:context=".ManageAccountsActivity" >

    <ScrollView
        android:id="@+id/scrollView_manage_accounts_list_parent"
